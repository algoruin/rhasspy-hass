{
    "name": "Mycroft Precise Wake System for Rhasspy",
    "slug": "precise-rhasspy",
    "version": "0.2.0-4",
    "description": "Mycroft Precise wake word detection (Mycroft.ai) for Rhasspy voice assistant",
    "url": "https://github.com/synesthesiam/hassio-addons/tree/master/mycroft-precise",
    "startup": "application",
    "boot": "auto",
    "map": ["share:rw"],
    "arch": [
        "amd64",
        "armhf"
    ],
    "options": {
        "host": "localhost",
        "port": 1883,
        "username": "",
        "password": "",
        "reconnect": 5,
        "site_id": "default",
        "wakeword_id": "default",
        "model": "/share/precise/okay-rhasspy.pb",
        "sensitivity": 0.5,
        "trigger_level": 3
    },
    "ports": {
        "12103/tcp": 12103
    },
    "schema": {
        "model": "str",
        "sensitivity": "float",
        "trigger_level": "int",
        "host": "str",
        "port": "int",
        "username": "str",
        "password": "str",
        "reconnect": "float",
        "site_id": "str",
        "wakeword_id": "str"
    },
    "webui": "http://[HOST]:[PORT:12103]/"
}
